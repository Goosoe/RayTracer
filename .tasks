[build]
# WINDOWS
# command=build.bat build $(VIM_PROFILE)
# LINUX
command=build.sh build $(VIM_PROFILE)
cwd=$(VIM_CWD)
errorformat=%f:%l\,%c:\ %t%*[^:]:\ %m
output=quickfix
save=2

[build-and-run]
# WINDOWS
# command=./build.bat build-and-run $(VIM_PROFILE)
# LINUX
command=./build.sh build-and-run $(VIM_PROFILE)
cwd=$(VIM_CWD)
errorformat=%f:%l\,%c:\ %t%*[^:]:\ %m
output=quickfix
save=2
